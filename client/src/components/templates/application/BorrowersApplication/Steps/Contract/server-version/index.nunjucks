<style>
    .contract-wrapper {
        width: 8.5in;
        padding: 20px;
    }

    .no-break {
        page-break-inside: avoid;
    }

    .new-page {
        page-break-before: always;
        margin-top: 40px;
    }

    table {
        border-collapce: collapse;
        border-spacing: 0;
    }

    table,
    table tr {
        border: none;
    }

    table td,
    table th {
        text-align: left;
        border: 1px solid;
        padding: 10px;
    }

    table th {
        background: #ebebeb;
    }

    .link-string {
        word-break: break-word;
    }

    .field {
        padding: 20px;
        display: flex;
        align-items: end;
        width: 100%;
    }
    .field div {
        display: inline-block;
    }
    .field .label {
        white-space: nowrap;
    }
    .field .value {
        border-bottom: 1px solid;
        width: 100%;
    }

    .text-center {
        text-align: center;
    }

    .underline {
        text-decoration: underline;
    }
</style>

<div class="page">
    <table style="border: none; padding: 0">
        <thead style="border: none; padding: 0">
            <tr style="border: none; padding: 0">
                <td style="border: none; margin-bottom: 20px">
                    <h4 style="text-align: center;margin:0; padding:0;">TGUC Borrower's Agreement </h4>
                </td>
            </tr>
        </thead>
        <tbody style="border: none; padding: 0">
            <tr style="border: none; padding: 0">
                <td style="border: none; padding: 0">

                    <div class="contract-wrapper">
                        {% include "./header.nunjucks" %}
                        {% include "./truthInLending.nunjucks" %}
                        {% include "./paymentSchedule.nunjucks" %}
                        {% include "./intimization.nunjucks" %}
                        {% include "./loanAgreementForm.nunjucks" %}
                        {% include "./loanAgreementNote.nunjucks" %}
                        {% include "./terms.nunjucks" %}
                        {% include "./signaturePage.nunjucks" %}
                        {% include "./attachment.nunjucks" %}
                        {% include "./noticeToCosigner.nunjucks" %}
                        {% include "./interestWaiver.nunjucks" %}
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>